{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*",
        ".storybook/**",
        "libs/**/*",
        "app/**/*",
        "tests/**/*"
      ],
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "inputs": [
        "src/**/*",
        ".storybook/**",
        "libs/**/*",
        "app/**/*",
        "tests/**/*"
      ],
      "dependsOn": ["^check-types"]
    },
    "test": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*", "tests/**/*"],
      "dependsOn": ["lint", "check-types", "^test"]
    },
    "build": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "esm/**"]
    },
    "test:e2e": {
      "inputs": [
        "app/**",
        "libs/**",
        "src/**",
        "tests-e2e/**",
        "tsconfig.json",
        "package.json",
        "tailwind.config.*"
      ],
      "outputs": ["playwright-report/**"]
    },
    "test:changed": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*", "tests/**/*"],
      "dependsOn": ["lint", "check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build:watch": {
      "persistent": true,
      "cache": false
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
