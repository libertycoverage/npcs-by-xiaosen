{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "esm/**"],
      "inputs": [
        "app/**",
        "libs/**",
        "src/**",
        "tsconfig.json",
        "package.json",
        "tailwind.config.*"
      ]
    },
    "check-types": {},
    "lint": {},
    "test": {
      "inputs": [
        "app/**",
        "libs/**",
        "src/**",
        "tests/**",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:e2e": {
      "inputs": [
        "app/**",
        "libs/**",
        "src/**",
        "tests-e2e/**",
        "tsconfig.json",
        "package.json",
        "tailwind.config.*"
      ],
      "outputs": ["playwright-report/**"]
    },
    "test:changed": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
