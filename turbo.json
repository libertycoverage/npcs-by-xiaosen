{
  "$schema": "https://turbo.build/schema.json",

  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*",
        ".storybook/**",
        "libs/**/*",
        "app/**/*",
        "tests/**/*"
      ]
    },
    "check-types": {
      "inputs": [
        "src/**/*",
        ".storybook/**",
        "libs/**/*",
        "app/**/*",
        "tests/**/*"
      ]
    },
    "test": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*", "tests/**/*"],
      "dependsOn": ["lint", "check-types"]
    },
    "build": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*", ".env*", "!.env.local"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^compile"],
      "env": ["NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY", "CLERK_SECRET_KEY"]
    },
    "compile": {
      "inputs": ["src/**/*"],
      "outputs": ["esm/**"],
      "dependsOn": ["^build"]
    },
    "test:e2e": {
      "inputs": [
        "app/**",
        "libs/**",
        "src/**",
        "tests-e2e/**",
        "tsconfig.json",
        "package.json",
        "tailwind.config.*"
      ],
      "outputs": ["playwright-report/**"]
    },
    "test:changed": {
      "inputs": ["src/**/*", "libs/**/*", "app/**/*", "tests/**/*"],
      "dependsOn": ["lint", "check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "compile:watch": {
      "persistent": true,
      "cache": false
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
